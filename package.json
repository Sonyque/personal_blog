{
  "name": "adriantoine.com",
  "version": "1.0.0",
  "description": "Personal website",
  "main": "index.js",
  "scripts": {
    "format": "prettier src/**/*.js --write --print-width=100 --single-quote --trailing-comma --no-bracket-spacing",
    "clean": "rm -rf public/bundle* && rm -f public/assets.json",
    "build": "npm run clean && NODE_ENV=production node build",
    "precommit": "prettier --write src/**/*.js --print-width 100 --single-quote=true --trailing-comma true --bracket-spacing false",
    "start": "rollup -cw --input src/index.js --output public/bundle.js | firebase serve",
    "lint": "eslint src"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:adriantoine/adriantoine.com.git"
  },
  "engines": {
    "node": "6.x.x",
    "npm": "3.x.x"
  },
  "author": "Adrien Antoine",
  "license": "ISC",
  "homepage": "https://github.com/adriantoine/adriantoine.com#readme",
  "devDependencies": {
    "autoprefixer": "^6.0.3",
    "chalk": "^1.1.3",
    "classnames": "^2.1.3",
    "cssnano": "^3.0.1",
    "filesize": "^3.3.0",
    "firebase-tools": "^3.0.7",
    "gzip-size": "^3.0.0",
    "lost": "^7.1.0",
    "normalize.css": "^4.2.0",
    "postcss-calc": "^5.0.0",
    "postcss-color-function": "^2.0.0",
    "postcss-css-variables": "^0.5.0",
    "postcss-custom-media": "^5.0.0",
    "postcss-extend": "^1.0.1",
    "postcss-import": "8.0.2",
    "postcss-nested": "^1.0.0",
    "postcss-responsive-type": "^0.4.0",
    "postcss-svg": "^1.0.1",
    "preact": "^6.0.1",
    "preact-enroute": "^1.2.1",
    "rollup": "^0.34.13",
    "rollup-plugin-buble": "^0.13.0",
    "rollup-plugin-commonjs": "^4.1.0",
    "rollup-plugin-filesize": "^0.4.4",
    "rollup-plugin-node-globals": "^1.0.7",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-postcss": "^0.2.0",
    "rollup-plugin-replace": "^1.1.1",
    "rollup-plugin-uglify": "^1.0.1",
    "rollup-watch": "^2.5.0",
    "twemoji": "^2.1.5"
  },
  "dependencies": {
    "eslint": "^3.16.1",
    "eslint-config-prettier": "^1.4.1",
    "eslint-config-standard": "^7.0.0",
    "eslint-config-standard-preact": "^1.0.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^6.10.0",
    "eslint-plugin-standard": "^2.1.1"
  }
}

{
  "hosting": {
    "public": "public",
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "ignore": [
      "firebase.json",
      "build.js",
      "package.json",
      "rollup.config.js",
      "**/.*",
      "**/node_modules/**",
      "src/**"
    ],
    "headers": [{
      "source" : "**/*.@(css|jpg|jpeg|gif|png)",
      "headers" : [{
        "key" : "Cache-Control",
        "value" : "max-age=31556952"
      }]
    }, {
      "source" : "bundle*.js",
      "headers" : [{
        "key" : "Cache-Control",
        "value" : "max-age=31556952"
      }]
    }, {
      "source" : "sw.js",
      "headers" : [{
        "key" : "Cache-Control",
        "value" : "no-store, must-revalidate"
      }]
    }]
  }
}
